\begin_layout Title
Probability and Statistics - P&P 4 
\end_layout

\begin_layout Author
Submission by: Elia Yakin & Itay Koren
\end_layout

\begin_layout Problem
Let 
\begin_inset Formula $X_{1},...,X_{n}\overset{iid}{\sim}Geo\left(\theta\right)$
\end_inset

 , 
\begin_inset Formula $\theta\in\left[0,1\right]$
\end_inset

.
 Find the MLE for 
\begin_inset Formula $\theta$
\end_inset

 
\end_layout

\begin_layout Subsection*
Answer: 
\begin_inset Formula 
\begin{align*}
\mathcal{L}\left(\theta;\boldsymbol{X}\right) & =P\left(x_{1}\cap x_{2}\cap\cdots\cap x_{n};\theta\right)\underset{iid}{=}\prod_{i=1}^{n}\left(1-\theta\right)^{x_{i}-1}\theta\\
 & \iff\\
\mathscr{\ell}\left(\theta;\boldsymbol{X}\right) & =\sum_{i}\left[\left(x_{i}-1\right)log\left(1-\theta\right)+log\left(\theta\right)\right]=n\cdot log\left(\theta\right)+log\left(1-\theta\right)\sum_{i}\left(x_{i}-1\right)
\end{align*}

\end_inset

 
\end_layout

\begin_layout Subsection*
\begin_inset Formula 
\begin{align*}
\frac{\partial\mathscr{\ell}\left(\theta;\boldsymbol{X}\right)}{\partial\theta} & =\frac{n}{\theta}+\frac{1}{1-\theta}\left(-1\right)\sum_{i}\left(x_{i}-1\right)=\frac{n}{\theta}-\frac{\sum_{i}x_{i}-n}{1-\theta}\underset{FOC}{=}0\\
\iff & n\left(1-\theta\right)=\theta\left(\sum_{i}x_{i}-n\right)\iff\widehat{\theta}_{MLE}=\frac{n}{\sum_{i}x_{i}}=\frac{1}{\overline{X}}
\end{align*}

\end_inset


\end_layout

\begin_layout Problem
Let 
\begin_inset Formula $X_{1},...,X_{n}$
\end_inset

 be an i.i.d with 
\begin_inset Formula $f_{\theta}\left(x\right)=\frac{1}{x}e^{-\pi\left(log\left(x\right)-\theta\right)^{2}}$
\end_inset

Find the MLE for 
\begin_inset Formula $\theta$
\end_inset

 
\end_layout

\begin_layout Subsection*
Answer: 
\begin_inset Formula 
\begin{align*}
\mathcal{L}\left(\theta;\boldsymbol{X}\right) & =f_{X}\left(x_{1}\cap x_{2}\cap\cdots\cap x_{n};\theta\right)\underset{iid}{=}\prod_{i=1}^{n}\frac{1}{x_{i}}e^{-\pi\left(log\left(x_{i}\right)-\theta\right)^{2}}\\
\iff\\
\mathscr{\ell}\left(\theta;\boldsymbol{X}\right) & =\sum_{i=1}^{n}\left[log\left(e^{-\pi\left(log\left(x_{i}\right)-\theta\right)^{2}}\right)-log\left(x_{i}\right)\right]\\
 & =\sum_{i=1}^{n}-\pi\left(log\left(x_{i}\right)-\theta\right)^{2}-\sum_{i=1}^{n}log\left(x_{i}\right)\\
 & =-\pi\sum_{i=1}^{n}\left(log^{2}\left(x_{i}\right)-log\left(x_{i}\right)\theta+\theta^{2}\right)-\sum_{i}log\left(x_{i}\right)\\
 & =-\pi\left(\sum_{i=1}^{n}log^{2}\left(x_{i}\right)-2\sum_{i=1}^{n}log\left(x_{i}\right)\theta+n\theta^{2}\right)-\sum_{i=1}^{n}log\left(x_{i}\right)
\end{align*}

\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\frac{\partial\mathscr{\ell}\left(\theta;X\right)}{\partial\theta}= & \pi2\sum_{i=1}^{n}log\left(x_{i}\right)-\pi2n\theta\underset{FOC}{=}0\\
\iff\widehat{\theta}_{MLE} & =\frac{1}{n}\sum_{i=1}^{n}log\left(x_{i}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Problem
Let 
\begin_inset Formula $X_{1},...,X_{n}\overset{iid}{\sim}N\left(\mu,\sigma^{2}\right)$
\end_inset

 , where 
\begin_inset Formula $\mu$
\end_inset

 and 
\begin_inset Formula $\sigma^{2}$
\end_inset

 are unknown .
 Find the MLE for 
\begin_inset Formula $\mu$
\end_inset

 and 
\begin_inset Formula $\sigma^{2}$
\end_inset

.
\end_layout

\begin_layout Subsection*
Answer: 
\begin_inset Formula 
\begin{align*}
\mathcal{L}\left(\mu,\sigma;\boldsymbol{X}\right) & =f_{X}\left(\mu,\sigma;x_{1}\cap x_{2}\cap\cdots\cap x_{n}\right)\\
 & \underset{iid}{=}\prod_{i=1}^{n}\frac{1}{\sigma\sqrt{2\pi}}e^{-\frac{1}{2}\left(\frac{x_{i}-\mu}{\sigma}\right)^{2}}=n\cdot\left(\sigma\sqrt{2\pi}\right)^{-1}e^{-\frac{1}{2}\sum_{i=1}^{n}\left(\frac{x_{i}-\mu}{\sigma}\right)^{2}}\\
\iff\\
\mathscr{\ell}\left(\mu,\sigma;\boldsymbol{X}\right) & =-n\cdot log\left(\sigma\sqrt{2\pi}\right)-\frac{1}{2\sigma^{2}}\sum_{i=1}^{n}\left(x_{i}-\mu\right)^{2}\\
\\
\frac{\partial\mathscr{\ell}\left(\mu,\sigma;\boldsymbol{X}\right)}{\partial\mu} & =-\frac{1}{2\sigma^{2}}2\sum_{i=1}^{n}\left(x_{i}-\mu\right)\cdot\left(-1\right)\underset{FOC}{=}0\iff n\mu=\sum_{i=1}^{n}x_{i}\implies\widehat{\mu}_{MLE}=\overline{X}\\
\frac{\partial\mathscr{\ell}\left(\mu,\sigma;\boldsymbol{X}\right)}{\partial\sigma} & =-n\cdot\frac{1}{\sigma\sqrt{2\pi}}\cdot\sqrt{2\pi}-\frac{\left(-2\right)}{2\sigma^{3}}\sum_{i=1}^{n}\left(x_{i}-\mu\right)^{2}\underset{FOC}{=}0\\
 & \implies\widehat{\sigma}_{MLE}^{2}=\frac{1}{n}\sum_{i=1}^{n}\left(x_{i}-\mu\right)^{2}=\frac{1}{n}\sum_{i=1}^{n}\left(x_{i}-\overline{X}\right)^{2}
\end{align*}

\end_inset

 
\end_layout

\begin_layout Problem
Let 
\begin_inset Formula $X_{1},...,X_{n}\overset{iid}{\sim}U\left(\theta+2,\theta+10\right)$
\end_inset

 (continuous).
 
\end_layout

\begin_layout Problem
(1) Find 
\begin_inset Formula $\hat{\theta}_{MOM}$
\end_inset

 (method of moments estimator for 
\begin_inset Formula $\theta$
\end_inset

).
 
\end_layout

\begin_layout Problem
(2) Evaluate 
\begin_inset Formula $\hat{\theta}_{MOM}$
\end_inset

 for the sample: 
\begin_inset Formula $\left\{ 12.3,17.5,15.1,14.7\right\} $
\end_inset

 
\end_layout

\begin_layout Subsection*
Answer: 
\end_layout

\begin_layout Standard
(1)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mu_{1}\left(\theta\right) & =EX=\frac{\left(\theta+2\right)+\left(\theta+10\right)}{2}=\theta+6=m_{1}=\overline{X}\\
\iff & \hat{\theta}_{MOM}=\overline{X}-6
\end{align*}

\end_inset

 (2) 
\begin_inset Formula 
\begin{align*}
\hat{\theta}_{MOM} & =\overline{X}-6=\left(\frac{12.3+17.5+15.1+14.7}{4}-6\right) & =8.9
\end{align*}

\end_inset


\end_layout

\begin_layout Problem
It is assumed that the daily amount of rain (in mm) that falls in London
 during January is distributed 
\begin_inset Formula $N\left(\mu,25\right)$
\end_inset

.
 We are interested in estimating 
\begin_inset Formula $P\left(X>75\right)$
\end_inset

.
 Two approaches were suggested: 
\end_layout

\begin_layout Problem
A.
 Estimate 
\begin_inset Formula $\mu$
\end_inset

 using the method of moments, and then estimate the probability using 
\begin_inset Formula $\hat{\mu}_{MOM}$
\end_inset

 instead of 
\begin_inset Formula $\mu$
\end_inset

 in the normal distribution.
\end_layout

\begin_layout Problem
B.
 Donâ€™t assume normality.
 Estimate the probability by calculating the proportion of observations
 that are greater than 75.
 
\end_layout

\begin_layout Problem
In a random sample of 10 observations, the following results were received:
 
\begin_inset Formula 
\begin{align*}
\left\{ 68.49,63.61,71.22,76.38,75.99,78.66,59.08,68.82,75.47,64.56\right\} 
\end{align*}

\end_inset

 (1) Estimate the required probability using both methods and compare the
 results.
 
\end_layout

\begin_layout Problem
(2) Estimate the probability 
\begin_inset Formula $P\left(X>72\right)$
\end_inset

 using both methods and compare the results.
\end_layout

\begin_layout Subsection*
Answer: 
\end_layout

\begin_layout Standard
(1) with MEM:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\hat{\mu}_{MEM} & =\frac{68.49+63.61+71.22+76.38+75.99+78.66+59.08+68.82+75.47+64.56}{10}=70.22\\
P\left(X>75\right) & =1-P\left(X\leq75\right)\underset{*}{=}1-P\left(\frac{X-\mu}{\sigma}\leq\frac{75-\mu}{\sigma}\right)=1-\phi\left(\frac{75-70.22}{5}\right)=1-\phi\left(0.956\right)=1-0.8306=0.1694
\end{align*}

\end_inset

* 
\bar under
note
\bar default
: from what I understand, in this particular question we are asked to use
 the known variance of 
\begin_inset Formula $X$
\end_inset

 and not the variance of the sample mean.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
P\left(X>75\right) & =\frac{1}{10}\sum_{i=1}^{10}I\left\{ X>75\right\} =0.4
\end{align*}

\end_inset

 (2)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
P\left(X>72\right) & =1-P\left(X\leq72\right)=1-P\left(z\leq\frac{72-70.22}{5}\right)=1-\phi\left(0.356\right)\approx0.36\\
P\left(X>72\right) & =\frac{1}{10}\sum_{i=1}^{10}I\left\{ X>72\right\} =0.4
\end{align*}

\end_inset


\end_layout

\begin_layout Problem
Let 
\begin_inset Formula $X_{1},...,X_{n}\overset{iid}{\sim}Poiss\left(\lambda\right)$
\end_inset


\end_layout

\begin_layout Problem
(1) Compute the MSE of the MLE for 
\begin_inset Formula $\lambda$
\end_inset

.
 
\end_layout

\begin_layout Problem
(2) A researcher believes that 
\begin_inset Formula $\lambda$
\end_inset

 is approximately 3, so he suggests to use the estimator which is the average
 between the MLE and 3: 
\begin_inset Formula $T=\frac{\overline{X_{n}}+3}{2}$
\end_inset

 .
 Compute the MSE of 
\begin_inset Formula $T$
\end_inset

.
 
\end_layout

\begin_layout Problem
(3) Compare the bias and the variance of the estimators as functions of
 
\begin_inset Formula $\lambda$
\end_inset

.
 
\end_layout

\begin_layout Problem
(4) Compare the MSE of the estimators as a function of 
\begin_inset Formula $\lambda$
\end_inset

 and find for which values of 
\begin_inset Formula $\lambda$
\end_inset

 each estimator is better than the other.
 Note that the range of 
\begin_inset Formula $\lambda$
\end_inset

 might depend on 
\begin_inset Formula $n$
\end_inset

.
\end_layout

\begin_layout Subsection*
Answer:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathcal{L}\left(\lambda;\boldsymbol{X}\right)=P\left(x_{1}\cap x_{2}\cap\cdots\cap x_{n};\lambda\right) & \underset{iid}{=}\prod_{i=1}^{n}\frac{\lambda^{x_{i}}e^{-\lambda}}{x_{i}!}\\
\iff\mathscr{\ell}\left(\lambda;\boldsymbol{X}\right)= & \sum_{i=1}^{n}x_{i}\cdot log\left(\lambda\right)-n\cdot\lambda-\sum_{i=1}^{n}log\left(x_{i}!\right)\\
\iff\\
\frac{\partial\mathscr{\ell}\left(\lambda;X\right)}{\partial\lambda} & =\frac{\sum_{i=1}^{n}x_{i}}{\lambda}-n\underset{FOC}{=}0\implies\hat{\lambda}_{MLE}=\frac{1}{n}\sum_{i=1}^{n}x_{i}=\overline{X}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Notice that 
\begin_inset Formula 
\begin{align*}
E\left(\hat{\lambda}_{MLE}-\lambda\right) & =E\left(\overline{X}-\lambda\right)=E\overline{X}-\lambda=0\\
\implies & Bias\left(\hat{\lambda}_{MLE}\right)=0
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
MSE\left(\hat{\lambda}_{MLE}\right) & =Var\left(\hat{\lambda}_{MLE}\right)+Bias^{2}\left(\hat{\lambda}_{MLE}\right)=Var\left(\hat{\lambda}_{MLE}\right)+0\\
 & =Var\left(\frac{1}{n}\sum_{i}X_{i}\right)=\frac{1}{n^{2}}\cdot Var\left(\sum_{i}X_{i}\right)\underset{iid}{=}\frac{1}{n^{2}}\cdot n\cdot Var\left(X_{i}\right)\\
 & =\frac{1}{n}\cdot\lambda\\
\iff\\
MSE\left(\hat{\lambda}_{MLE}\right) & =\frac{\lambda}{n}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
(2) we are given 
\begin_inset Formula $T=\frac{3+\lambda}{2}$
\end_inset


\begin_inset Formula 
\begin{align*}
E\left(T\right) & =E\left(\frac{\overline{X}+3}{2}\right)=\frac{1}{2}E\overline{X}+\frac{3}{2}=\frac{1}{2}\lambda+\frac{3}{2}\underset{\lambda\neq3}{\neq}\lambda\implies T\ is\ Baised
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
MSE\left(T\right) & =Var\left(T\right)+Bias^{2}\left(\hat{\lambda}_{MLE}\right)\\
 & =\frac{1}{4}Var\left(\overline{X}\right)+\left(\frac{1}{2}\lambda+\frac{3}{2}-\lambda\right)^{2}\\
 & \underset{iid}{=}\frac{1}{4}\cdot\frac{\lambda}{n}+\frac{1}{4}\left(3-\lambda\right)^{2}\\
\iff\\
MSE\left(T\right) & =\frac{1}{4}\left[\frac{\lambda}{n}+\left(3-\lambda\right)^{2}\right]
\end{align*}

\end_inset

 (3) 
\begin_inset Formula 
\begin{align*}
Var\left(T\right)=\frac{1}{4}Var\left(\overline{X}\right) & <Var\left(\overline{X}\right)=Var\left(\hat{\lambda}_{MLE}\right)\ \forall n\in N
\end{align*}

\end_inset

 and 
\begin_inset Formula 
\begin{align*}
Bias^{2}\left(T\right)=\left(\frac{3-\lambda}{2}\right)^{2} & \underset{\lambda\neq3}{>}0=Bias^{2}\left(\hat{\lambda}_{MLE}\right)\\
Bias^{2}\left(T\right) & \underset{\lambda=3}{=}0=Bias^{2}\left(\hat{\lambda}_{MLE}\right)
\end{align*}

\end_inset

We can say that if 
\begin_inset Formula $\lambda\neq3$
\end_inset

 than 
\begin_inset Formula $T$
\end_inset

 has higher squared bias and lower variance.
\begin_inset Newline newline
\end_inset

(4) As 
\begin_inset Formula $n\to\infty$
\end_inset

 we get:
\begin_inset Formula 
\begin{align*}
MSE\left(T\right)=\frac{1}{4}\left[\frac{\lambda}{n}+\left(3-\lambda\right)^{2}\right]\underset{n\to\infty}{=}\frac{\left(3-\lambda\right)^{2}}{4}\underset{\lambda\neq3}{>}0= & MSE\left(\hat{\lambda}_{MLE}\right)
\end{align*}

\end_inset

while only if 
\begin_inset Formula $\lambda=3$
\end_inset

 we get that 
\begin_inset Formula 
\begin{align*}
MSE\left(T\right) & =0=MSE\left(\hat{\lambda}_{MLE}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Problem
The weight of students in some university is normally distributed.
 A sample of 12 students is drawn with the following results (in Kg): 
\begin_inset Formula 
\begin{align*}
\left\{ 53.8,67.34,51.7,52,58.9,74,45.3,53,62.5,48.87,49,55.6\right\} 
\end{align*}

\end_inset


\end_layout

\begin_layout Problem
(1) Assuming that the variance is known and equals 1.5 Kg, calculate the
 confidence interval for the expected value of the weight with confidence
 level 95%.
\end_layout

\begin_layout Problem
2) Repeat part 1, this time for a confidence level of 90%.
 What can you say about the difference between the results? 
\end_layout

\begin_layout Problem
(3) Assuming that the variance is known and equals 2 Kg, calculate the confidenc
e interval for the expected value of the weight with confidence level 95%.
 What can you conclude from the result? 
\end_layout

\begin_layout Problem
(4) Repeat part 1, assuming that the variance is unknown.
\end_layout

\begin_layout Subsection*
Answer: 
\end_layout

\begin_layout Standard
(1) 
\begin_inset Formula 
\begin{align*}
\overline{X} & =\frac{53.8+67.34+51.7+52+58.9+74+45.3+53+62.5+48.87+49+55.6}{12}\simeq56\\
\frac{\sigma}{\sqrt{12}} & =\sqrt{\frac{1.5}{12}}=0.353
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
we can than write 
\begin_inset Formula 
\begin{align*}
P\left(C_{1}\left(\boldsymbol{X}\right)\leq56\leq C_{2}\left(\boldsymbol{X}\right)\right) & =0.95\\
\iff\\
P\left(-z_{97.5}\leq\frac{56}{\sigma/\sqrt{n}}\leq z_{97.5}\right) & =0.95\\
\implies CI_{0.95} & =\left[56-z_{97.5}\cdot\sigma/\sqrt{n},56+z_{97.5}\cdot\sigma/\sqrt{n}\right]\\
 & =\left[56-1.96\cdot0.353,56+1.96\cdot0.353\right]\\
 & =\left[55.30,56.69\right]
\end{align*}

\end_inset

 (2) 
\begin_inset Formula 
\begin{align*}
CI_{0.9} & =\left[56-z_{95}\cdot\sigma/\sqrt{n},56+z_{95}\cdot\sigma/\sqrt{n}\right]\\
 & =\left[56-1.65\cdot0.353,56+1.65\cdot0.353\right]\\
 & =\left[55.41,56.58\right]
\end{align*}

\end_inset

 As we allow for lower confidence that 
\begin_inset Formula $\mu_{X}$
\end_inset

 is in the interval that interval itself get smaller: 
\begin_inset Formula 
\begin{align*}
L\left(CI_{0.95}\right)=C_{2,0.95}-C_{1,0.95}= & 56.69-55.30\\
=1.39>1.17= & 56.58-55.41=C_{2,0.9}-C_{1,0.9}=L\left(CI_{0.9}\right)\\
\iff\\
CI_{0.95} & >CI_{0.9}
\end{align*}

\end_inset

 (3) we now assume that 
\begin_inset Formula $\sigma^{2}=2$
\end_inset

 thus 
\begin_inset Formula 
\begin{align*}
\widetilde{CI}_{0.95} & =\left[56-z_{97.5}\cdot\sigma/\sqrt{n},56+z_{97.5}\cdot\sigma/\sqrt{n}\right]\\
 & =\left[56-1.96\cdot\sqrt{2/12},56+1.96\cdot\sqrt{2/12},\right]\\
 & =\left[55.2,56.8\right]\\
\implies & L\left(\widetilde{CI}_{0.95}\right)>L\left(CI_{0.95}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
A higher variance leeds to a larger CI 
\end_layout

\begin_layout Standard
(4) Assuming the variance is unknow we have to use T-test confidence interval
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
S^{2} & =\frac{1}{12-1}\sum_{i=1}^{12}\left(x_{i}-56\right)^{2}=69.64\implies S=8.34
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
CI_{0.95} & =\left[56-t_{11,97.5}\cdot S/\sqrt{n},\,56+t_{11,97.5}\cdot S/\sqrt{n}\right]\\
 & =\left[56-2.201\cdot2.4,\,56+2.201\cdot2.4\right]\\
 & =\left[50.71,61.28\right]
\end{align*}

\end_inset

 
\end_layout

\begin_layout Problem
Let 
\begin_inset Formula $X\sim N\left(\mu,\sigma^{2}\right)$
\end_inset

 (both parameters are unknown).
 In a random sample of 10 observations we received that: 
\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\begin{align*}
\sum_{i=1}^{10}x_{i}=15 & \sum_{i=1}^{10}x_{i}^{2}=27
\end{align*}

\end_inset

 and the 
\begin_inset Formula $CI$
\end_inset

 for 
\begin_inset Formula $\mu$
\end_inset

 is 
\begin_inset Formula $\left[1.09,1.91\right]$
\end_inset

.
 What is the confidence level of this confidence interval? 
\end_layout

\begin_layout Subsection*
Answer: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\overline{X} & =\frac{1}{10}\sum_{i=1}^{10}x_{i}=\frac{15}{10}=1.5
\end{align*}

\end_inset

 
\begin_inset Formula 
\begin{align*}
S^{2} & =\frac{1}{9}\sum_{i=1}^{10}\left(x_{i}-\overline{X}\right)^{2}=\frac{1}{9}\sum_{i=1}^{10}\left(x_{i}^{2}-2x_{i}\overline{X}+\overline{X}^{2}\right)=\frac{1}{9}\left(\sum_{i=1}^{10}x^{2}-2\overline{X}\sum_{i=1}^{10}x_{i}+\sum_{i=1}^{10}\overline{X}^{2}\right)\\
 & =\frac{1}{9}\left[27-2\cdot1.5\cdot15+10\cdot1.5^{2}\right]=0.5\\
\implies S & =0.707
\end{align*}

\end_inset

 
\begin_inset Formula 
\begin{align*}
C_{1}=\overline{X}-t_{n-1,1-\frac{\alpha}{2}}\cdot S/\sqrt{n} & =1.5-t_{n-1,\frac{\alpha}{2}}\cdot\sqrt{0.5}/\sqrt{10}=1.09\\
\iff & t_{9,\frac{\alpha}{2}}=\frac{1.5-1.09}{\sqrt{0.5/10}}=1.833\\
\iff & \alpha/2=0.05\\
1-0.1 & \approx0.9
\end{align*}

\end_inset

 the confidence level is 
\begin_inset Formula $0.9$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Problem
In a random sample of 100 students, it was found that 30 like Bamba.
 
\end_layout

\begin_layout Problem
(1) Compute an asymptotic confidence interval for the proportion of Bamba
 lovers among the students.
 
\end_layout

\begin_layout Problem
(2) Find the minimal sample size 
\begin_inset Formula $n$
\end_inset

 for which the length of the CI will be at most 0.02.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Subsection*
Answer: 
\end_layout

\begin_layout Standard
(1) We assume all students like or deslike Bamba and thus 
\begin_inset Formula $X_{1},\dots,X_{100}\sim Bin\left(\theta\right)$
\end_inset

 given the information we can assume 
\begin_inset Formula 
\begin{align*}
\overline{X} & =0.3=\hat{\theta}
\end{align*}

\end_inset

 and hence 
\begin_inset Formula $E\hat{\theta}=0.3$
\end_inset

 
\begin_inset Formula $Var\left(\hat{\theta}\right)=0.3\left(1-0.3\right)=0.21$
\end_inset

 and we get that The asymptotic confidence interval for 
\begin_inset Formula $\hat{\theta}$
\end_inset

 is:
\begin_inset Newline newline
\end_inset


\begin_inset Formula 
\begin{align*}
\left[n\cdot\hat{\theta}\pm\frac{\sqrt{n\hat{\theta}\left(1-\hat{\theta}\right)}}{\sqrt{n}}z_{1-\frac{\alpha}{2}}\right] & =\left[0.3\pm\frac{\sqrt{0.21}}{10}z_{1-\frac{\alpha}{2}}\right]=\left[0.3\pm0.0458\cdot z_{1-\frac{\alpha}{2}}\right]
\end{align*}

\end_inset

 (2) 
\begin_inset Formula 
\begin{align*}
n & =4\cdot z_{1-\frac{\alpha}{2}}^{2}\cdot\frac{\sigma^{2}}{L_{0}^{2}}=4\cdot z_{1-\frac{\alpha}{2}}^{2}\cdot\frac{0.21}{0.02^{2}}=0.21\cdot10^{4}\cdot z_{1-\frac{\alpha}{2}}^{2}
\end{align*}

\end_inset

 for 
\begin_inset Formula $z_{0.975}=1.96$
\end_inset

 we get 
\begin_inset Formula $n\geq0.21\cdot10^{4}\cdot1.96^{2}\approx8068$
\end_inset

 
\end_layout

