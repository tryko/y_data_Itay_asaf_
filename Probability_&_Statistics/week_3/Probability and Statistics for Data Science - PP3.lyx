\begin_layout Subsection*
Answer: 
\end_layout

\begin_layout Standard
\begin_inset Formula $Y=Z-X$
\end_inset


\end_layout

\begin_layout Standard
Proof of the hint: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
P\left(Z\leq z\mid X=x\right) & =P\left(X+Y\leq z\mid X=x\right)\\
 & \underset{X=x}{=}P\left(x+Y\leq z\mid X=x\right)\\
 & =P\left(Y\leq z-x\mid X=x\right)\\
 & \underset{X\perp Y}{=}P\left(Y\leq z-x\right)\\
\iff\\
\int_{-\infty}^{z}f_{Z|X=x}\left(t\right)dt & =\int_{-\infty}^{z-x}f_{Y|X=x}\left(t\right)dt=\int_{-\infty}^{z-x}\frac{f_{XY}\left(t,x\right)}{f_{X}\left(x\right)}dt\\
 & \underset{X\perp Y}{=}\int_{-\infty}^{z-x}\frac{f_{Y}\left(t\right)f_{X}\left(x\right)}{f_{X}\left(x\right)}d=\int_{-\infty}^{z-x}f_{Y}\left(t\right)d
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Thus
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
f_{Z|X=x}\left(z\mid x\right)=\frac{f_{YX}\left(z-x,x\right)}{f_{X}\left(x\right)}\underset{X\perp Y}{=} & \frac{f_{Y}\left(z-x\right)f_{X}\left(x\right)}{f_{X}\left(x\right)}=f_{Y}\left(z−x\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
(2) We now assume 
\begin_inset Formula $X,Y\sim Exp\left(\lambda\right)$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
f_{X|Z=z}\left(x\mid z\right) & \underset{Bayes}{=}\frac{f_{Z|X=x}\left(z\mid x\right)f_{X}\left(x\right)}{f_{Z}\left(z\right)}=\frac{f_{Y}\left(z−x\right)f_{X}\left(x\right)}{f_{Z}\left(z\right)}\\
 & =\frac{f_{Y}\left(z−x\right)f_{X}\left(x\right)}{f_{Z}\left(z\right)}\underset{*}{=}\frac{\lambda e^{-\lambda\left(z-x\right)}\lambda e^{-\lambda x}}{\lambda^{2}ze^{-\lambda z}}\\
 & =\frac{e^{-\lambda\left(z-x+x\right)}}{ze^{-\lambda z}}=\frac{1}{z}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
* Note that 
\begin_inset Formula 
\begin{align*}
f_{Z}\left(z\right) & =\int_{0}^{z}f_{Z}\left(z\right)dz=\int_{0}^{z}f_{YX}\left(z-x,x\right)dz\\
 & \underset{X\perp Y}{=}\int_{0}^{z}f_{Y}\left(z-x\right)f_{X}\left(x\right)dz\\
 & =\int_{0}^{z}\lambda e^{-\lambda\left(z-x\right)}\lambda e^{-\lambda x}dz\\
 & =\lambda^{2}ze^{-\lambda z}
\end{align*}

\end_inset


\end_layout

\begin_layout Problem
Let 
\begin_inset Formula $X\sim Ber\left(p\right)$
\end_inset

, 
\begin_inset Formula $Y\sim Geo\left(p\right)$
\end_inset

 be two independent random variables and define 
\begin_inset Formula $Z=XY$
\end_inset

.
 Express in terms of 
\begin_inset Formula $p$
\end_inset

 the covariance 
\begin_inset Formula $Cov\left(Z,X\right)$
\end_inset

 and 
\begin_inset Formula $Cov\left(Z,Y\right)$
\end_inset

.
 
\end_layout

\begin_layout Problem
\begin_inset Formula 
\begin{align*}
Cov\left(Z,X\right)=E\left(Z-EZ\right)\left(X-EX\right) & =E\left(XY-EXY\right)\left(X-\mu_{X}\right)\underset{X\perp Y}{=}E\left[\left(XY-\mu_{X}\mu_{Y}\right)\left(X-\mu_{X}\right)\right]\\
 & =E\left[XYX-XY\mu_{X}-X\mu_{X}\mu_{Y}+\mu_{X}^{2}\mu_{Y}\right]\\
 & \underset{linearity}{=}E\left[X^{2}Y\right]-EXY\mu_{X}-\mu_{X}\mu_{X}\mu_{Y}+\mu_{X}^{2}\mu_{Y}\\
 & \underset{X\perp Y}{=}E\left[X^{2}Y\right]-\mu_{X}^{2}\mu_{Y}-\mu_{X}^{2}\mu_{Y}+\mu_{X}^{2}\mu_{Y}\\
 & =E\left[X^{2}Y\right]-\mu_{X}^{2}\mu_{Y}\\
 & =Cov\left(X^{2},Y\right)
\end{align*}

\end_inset

So we can say 
\begin_inset Formula 
\begin{align*}
Cov\left(Z,X\right) & =Cov\left(XY,X\right)\underset{X\perp Y}{=}Cov\left(Y,X^{2}\right)\\
 & =E\left[X^{2}Y\right]-p^{2}\frac{1}{p}\\
 & \underset{X\perp Y}{=}EX^{2}EY-p\\
 & =p\cdot\frac{1}{p}-p\\
 & =1-p
\end{align*}

\end_inset

and similarly 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
Cov\left(Z,Y\right) & =Cov\left(XY,Y\right)=Cov\left(Y^{2},X\right)\\
 & =EY^{2}X-E^{2}YEX\\
 & =EY^{2}\cdot p-\frac{1}{p}\\
 & \underset{*}{=}\left(\frac{2-p}{p^{2}}\right)\cdot p-\frac{1}{p}\\
 & =\frac{1-p}{p}
\end{align*}

\end_inset

 
\end_layout

\begin_layout Standard
* See the following:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
EY^{2}=\sum_{k=0}^{\infty}k^{2}P\left(Y=k\right) & =\sum_{k=0}^{\infty}k\left(k-1+1\right)p\left(1-p\right)^{k-1}\\
 & =\sum_{k=0}^{\infty}k\left(k-1\right)p\left(1-p\right)^{k-1}+\sum_{k=0}^{\infty}kp\left(1-p\right)^{k-1}\\
 & =\sum_{k=0}^{\infty}k\left(k-1\right)p\left(1-p\right)^{k-1}+EY\\
 & =\sum_{k=0}^{\infty}k\left(k-1\right)p\left(1-p\right)\left(1-p\right)^{k-2}+EY\\
 & =p\left(1-p\right)\sum_{k=0}^{\infty}k\left(k-1\right)\left(1-p\right)^{k-2}+EY\\
 & =p\left(1-p\right)\frac{\partial^{2}}{\partial^{2}p}\left[\left(-1\right)\cdot\left(-1\right)\cdot\sum_{k=0}^{\infty}\left(1-p\right)^{k}\right]+EY\\
 & =p\left(1-p\right)\frac{\partial^{2}}{\partial^{2}p}\left[\frac{1}{p}\right]+\frac{1}{p}=p\left(1-p\right)\frac{\partial^{2}}{\partial^{2}p}\left[p^{-1}\right]+\frac{1}{p}\\
 & =p\left(1-p\right)\cdot\left(-1\right)\cdot\left(-2\right)\cdot p^{-3}+\frac{1}{p}\\
 & =\frac{2\left(1-p\right)}{p^{2}}+\frac{1}{p}=\frac{2\left(1-p\right)}{p^{2}}+\frac{p}{p^{2}}=\frac{2\left(1-p\right)+p}{p^{2}}\\
 & =\frac{2-p}{p^{2}}
\end{align*}

\end_inset


\end_layout

